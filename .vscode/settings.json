{
	"latex-workshop.latex.outDir": "%DIR%/.auxiliary",   // Definig the variable
	"latex-workshop.latex.tools": 
		[
			{
				"name": "xelatex",
				"command": "xelatex",
				"args": [
					"-synctex=1",
					"-interaction=nonstopmode",
					"-file-line-error",
					"-output-directory=%OUTDIR%",      // Using the variable
					"%DOC%"
				],
				"env": {}
			},
			{
				"name": "biber",
				"command": "biber",
				"args": [
					".auxiliary/%DOCFILE%"
				]
			},
			{
				"name": "copy pdf",
				"command": "cp",
				"args": [
					"%OUTDIR%/%DOCFILE%.pdf", "%DIR%/"
				]
			}
		],
	"latex-workshop.latex.recipes": 
		[
			{
				"name": "xelatex -> biber -> biber -> xelatex",
				"tools": [
					"xelatex",
					"biber",
					"biber",
					"xelatex",
					"copy pdf"
				]
			},
		],
		"grammarly.selectors": [
			{
				"language": "latex",
				"scheme": "file"
			}
		],
}