{
	"latex-workshop.latex.outDir": "%DIR%/.auxiliary",   // Definig the variable
	"latex-workshop.latex.tools": 
		[
			{
				"name": "xelatex",
				"command": "xelatex",
				"args": [
					"-synctex=1",
					"-interaction=nonstopmode",
					"-file-line-error",
					"-output-directory=%OUTDIR%",      // Using the variable
					"%DOC%"
				],
				"env": {}
			},
			{
				"name": "biber",
				"command": "biber",
				"args": [
					".auxiliary/%DOCFILE%"
				]
			},
			{
				"name": "copy pdf",
				"command": "cp",
				"args": [
					"%OUTDIR%/%DOCFILE%.pdf", "%DIR%/"
				]
			}
		],
	"latex-workshop.latex.recipes": 
		[
			{
				"name": "xelatex -> biber -> biber -> xelatex -> copy",
				"tools": [
					"xelatex",
					"biber",
					"biber",
					"xelatex",
					"copy pdf"
				]
			},
		],
		"cSpell.language": "en-US, de-DE",
		"cSpell.dictionaries": ["my_dictionary-de", "german", "latex"],
		"cSpell.enabled": true,
		"cSpell.allowCompoundWords": true,
		"cSpell.diagnosticLevel": "Hint",
		"cSpell.dictionaryDefinitions": [
			{
				"name": "my_dictionary",
				"path": "./.vscode/dictionary.txt",
				"addWords": true
			}
		],
		"cSpell.ignoreRegExpList": [
			"\\\\[a-zA-Z]+",
			"\\{[^}]*\\}"
		],
		
		"ltex.enabled": ["bibtex", "context", "context.tex", "html", "latex", "markdown", "org", "restructuredtext", "rsweave"],
		"ltex.language": "en-US",
		"ltex.dictionary": {"en-US": [":/.vscode/dictionary.txt"]},
		"ltex.hiddenFalsePositives": {"en-US": [":/.vscode/ltex.hiddenFalsePositives.txt"]},
		"ltex.checkFrequency": "edit",
		"ltex.additionalRules.enablePickyRules": true,
		"ltex.ltex-ls.logLevel": "info",
		"ltex.diagnosticSeverity": "hint",
		"ltex.completionEnabled": true,
		"ltex.latex.commands": {
			"\\cite{}": "ignore",
			"\\ref{}": "ignore",
			"\\label{}": "ignore",
			"\\documentclass[]{}": "ignore",
		},
		"ltex.trace.server": "verbose",
}